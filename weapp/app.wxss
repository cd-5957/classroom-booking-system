/* app.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部样式 */
.header {
  background-color: #1E40AF;
  color: white;
  padding: 20rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
}

.admin-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.admin-name {
  font-size: 24rpx;
}

.btn-small {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 提示框样式 */
.tip-box {
  background-color: #f0f9ff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #3b82f6;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 日历导航样式 */
.calendar-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.nav-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  background-color: #f3f4f6;
  font-size: 24rpx;
}

.current-month {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 加载样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.loading-icon {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #1E40AF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 日历网格样式 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.weekday {
  width: 14.28%;
  text-align: center;
  padding: 16rpx 0;
  font-size: 24rpx;
  font-weight: 600;
  color: #6b7280;
  box-sizing: border-box;
}

.calendar-day {
  width: 14.28%;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 12rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 8rpx;
}

.calendar-day-disabled {
  background-color: #f3f4f6;
  color: #9ca3af;
}

.calendar-day-today {
  background-color: #dbeafe;
}

.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.day-number {
  font-size: 24rpx;
  font-weight: 600;
}

.booking-count {
  font-size: 20rpx;
  background-color: #fee2e2;
  color: #dc2626;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
}

.day-bookings {
  margin-top: 8rpx;
}

.booking-item {
  font-size: 18rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.booking-more {
  font-size: 18rpx;
  color: #9ca3af;
}

/* 弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 40rpx;
}

.modal-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  width: 100%;
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.modal-close {
  font-size: 32rpx;
  color: #6b7280;
}

.modal-body {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #4b5563;
  margin-bottom: 16rpx;
}

.empty-state {
  padding: 40rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 24rpx;
}

.booking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.booking-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
}

.delete-btn {
  font-size: 20rpx;
  color: #dc2626;
}

.booking-time {
  font-size: 22rpx;
  color: #6b7280;
}

.book-btn {
  background-color: #1E40AF;
  color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
}

/* 表单样式 */
.form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.form-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #4b5563;
}

.form-input {
  padding: 20rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.duration-info {
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
}

.duration-text {
  font-size: 22rpx;
  color: #6b7280;
}

.submit-btn {
  background-color: #1E40AF;
  color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
}

/* 消息提示样式 */
.message {
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 24rpx;
  font-size: 22rpx;
}

.message-success {
  background-color: #dcfce7;
  color: #166534;
}

.message-error {
  background-color: #fee2e2;
  color: #b91c1c;
}

/* 底部样式 */
.footer {
  margin-top: 40rpx;
  padding: 20rpx;
  text-align: center;
}

.footer-text {
  font-size: 22rpx;
  color: #6b7280;
}