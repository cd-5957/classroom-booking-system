/* pages/index/index.wxss */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 内容区域 */
.content {
  padding: 20rpx;
}

/* 页面头部 */
/* 导航容器 */
.nav-container {
  background-color: #1E40AF;
  padding: 0;
  margin: 0;
  height: 160rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
}

/* 标题栏 */
.header-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding-bottom: 20rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 按钮区 */
.nav-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  align-items: center;
  margin: 20rpx 0;
}

.batch-booking-btn {
  font-size: 24rpx;
  color: #ffffff;
  background-color: #3B82F6;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  min-width: 150rpx;
}

.admin-login-btn {
  font-size: 24rpx;
  color: #1E40AF;
  background-color: #ffffff;
  border: 1rpx solid #1E40AF;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  min-width: 150rpx;
}

.admin-logout-btn {
  font-size: 24rpx;
  color: #1E40AF;
  background-color: #ffffff;
  border: 1rpx solid #1E40AF;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  min-width: 150rpx;
}

/* 操作提示 */
.tip-box {
  background-color: #E0F2FE;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.tip-text {
  font-size: 28rpx;
  color: #0EA5E9;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  background-color: #1E40AF;
  border-radius: 12rpx;
  padding: 40rpx 60rpx;
  text-align: center;
}

.loading-text {
  font-size: 32rpx;
  color: #ffffff;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* 年月显示 */
.month-display {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

/* 月份导航按钮 */
.month-nav-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #E5E7EB;
}

/* 日历导航 */
.calendar-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.nav-btn {
  background-color: #1E40AF;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 8rpx;
  font-size: 16rpx;
  min-width: 20rpx;
  text-align: center;
  white-space: nowrap;
  height: 60rpx;
  line-height: 36rpx;
}

.nav-btn.disabled {
  background-color: #9CA3AF;
  cursor: not-allowed;
}

.current-month {
  font-size: 28rpx;
  font-weight: bold;
  color: #1F2937;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

/* 星期标题 */
.weekday {
  width: 14.28%; /* 100%/7 columns */
  text-align: center;
  padding: 16rpx 0;
  font-size: 24rpx;
  font-weight: bold;
  color: #4B5563;
  box-sizing: border-box;
}

/* 日期单元格 */
.calendar-day {
  width: 14.28%; /* 100%/7 columns */
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1rpx solid #E5E7EB;
  position: relative;
  cursor: pointer;
  padding: 8rpx 4rpx;
}

.calendar-day.current-month {
  background-color: #FFFFFF;
}

.calendar-day.other-month {
  background-color: #F3F4F6;
}

.calendar-day.past-date {
  background-color: #F9FAFB;
  cursor: not-allowed;
}

.calendar-day.has-booking {
  background-color: #EFF6FF;
  border-color: #3B82F6;
}

.day-number {
  font-size: 24rpx;
  color: #1F2937;
}

.calendar-day.other-month .day-number {
  color: #9CA3AF;
}

.calendar-day.past-date .day-number {
  color: #D1D5DB;
}

.booking-count {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 14rpx;
  color: #3B82F6;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 2rpx 6rpx;
  min-width: 20rpx;
  text-align: center;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

/* 预定时间段 */
.booking-times {
  position: absolute;
  bottom: 4rpx;
  left: 4rpx;
  right: 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rpx;
  max-height: 60%;
  overflow: hidden;
}

.booking-time-slot {
  color: #EF4444;
  font-size: 14rpx;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  margin-bottom: 2rpx;
  max-width: 90%;
  text-align: center;
  overflow: hidden;
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time-slot-text {
  font-size: 10rpx;
}

/* 联系信息 */
.footer {
  text-align: center;
  margin-top: 40rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #E5E7EB;
}

.footer-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* 弹框遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

/* 弹框内容 */
.modal-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 弹框头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1F2937;
}

.modal-close-btn {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #6B7280;
  padding: 0;
  min-width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹框内容 */
.modal-body {
  padding: 24rpx;
}

/* 无预约记录 */
.no-bookings {
  text-align: center;
  padding: 40rpx 0;
  color: #6B7280;
  font-size: 24rpx;
}

/* 预约列表 */
.booking-list {
  margin-top: 8rpx;
}

.booking-item {
  display: flex;
  flex-direction: column;
  padding: 16rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  background-color: #F9FAFB;
}

.booking-time {
  margin-bottom: 8rpx;
}

.time-text {
  font-size: 24rpx;
  color: #1F2937;
  font-weight: 500;
}

.booking-info {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.booking-name {
  font-size: 24rpx;
  color: #4B5563;
}

.delete-btn {
  font-size: 20rpx;
  color: #EF4444;
  background: none;
  border: 1rpx solid #EF4444;
  border-radius: 4rpx;
  padding: 4rpx 12rpx;
  min-width: 80rpx;
  height: 40rpx;
  margin-top: 4rpx;
}

/* 消息框 */
.message-box {
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.message-box.success {
  background-color: #D1FAE5;
  color: #065F46;
}

.message-box.error {
  background-color: #FEE2E2;
  color: #991B1B;
}

/* 表单组 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #4B5563;
  margin-bottom: 8rpx;
}
/* 表单输入 */
.form-input {
  width: 100%;
  padding: 20rpx 16rpx;
  border: 1rpx solid #D1D5DB;
  border-radius: 8rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #F9FAFB;
  height: 80rpx;
  line-height: 40rpx;
}

/* 时间选择器 */
.form-picker {
  width: 100%;
  padding: 0;
}

.picker-content {
  width: 100%;
  padding: 16rpx;
  border: 1rpx solid #D1D5DB;
  border-radius: 8rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #F9FAFB;
  color: #4B5563;
}

/* 时长信息 */
.duration-info {
  margin-top: 16rpx;
  padding: 12rpx;
  background-color: #F3F4F6;
  border-radius: 8rpx;
  text-align: center;
}

.duration-text {
  font-size: 22rpx;
  color: #4B5563;
}

/* 弹框底部 */
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #E5E7EB;
  background-color: #F9FAFB;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

/* 按钮样式 */
.btn-secondary {
  background-color: #F3F4F6;
  color: #4B5563;
  border: 1rpx solid #D1D5DB;
  border-radius: 8rpx;
  padding: 14rpx 28rpx;
  font-size: 24rpx;
  min-width: 120rpx;
}

.btn-primary {
  background-color: #1E40AF;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 14rpx 28rpx;
  font-size: 24rpx;
  min-width: 120rpx;
}

/* 日期选择器容器 */
.date-picker-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 10rpx;
}

/* 日期选择器项 */
.date-picker-item {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* 当前月份的日期 */
.date-picker-item.current-month {
  background-color: #ffffff;
  color: #333333;
  border: 1rpx solid #e0e0e0;
}

/* 其他月份的日期 */
.date-picker-item.other-month {
  background-color: #f0f0f0;
  color: #999999;
  border: 1rpx solid #e0e0e0;
}

/* 选中的日期 */
.date-picker-item.selected {
  background-color: #1E40AF;
  color: #ffffff;
  border: 1rpx solid #1E40AF;
}

/* 日期数字 */
.date-picker-day {
  font-size: 22rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .calendar-day {
    font-size: 20rpx;
  }
  
  .nav-btn {
    font-size: 20rpx;
    min-width: 100rpx;
  }
  
  .current-month {
    font-size: 24rpx;
  }
  
  .modal-content {
    width: 90%;
  }
}
