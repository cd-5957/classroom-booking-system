<!-- pages/login/login.wxml -->
<view class="container">
  <view class="card">
    <view class="flex justify-between items-center mb-4">
      <text class="text-lg font-medium">管理员登录</text>
      <text bindtap="handleClose" class="text-gray-500">×</text>
    </view>
    
    <form bindsubmit="handleLogin" class="space-y-4">
      <view>
        <text class="block text-sm font-medium text-gray-700 mb-1">用户名</text>
        <input 
          name="username" 
          value="{{ username }}" 
          bindinput="handleInput" 
          type="text" 
          placeholder="请输入用户名" 
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md"
        />
      </view>
      <view>
        <text class="block text-sm font-medium text-gray-700 mb-1">密码</text>
        <input 
          name="password" 
          value="{{ password }}" 
          bindinput="handleInput" 
          type="password" 
          placeholder="请输入密码" 
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md"
        />
      </view>
      <button 
        type="submit" 
        disabled="{{ isSubmitting }}" 
        class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-70 disabled:cursor-not-allowed"
      >
        {{ isSubmitting ? '登录中...' : '登录' }}
      </button>
    </form>
    <view wx:if="{{ loginMessage }}" class="mt-4 p-3 rounded-md" class="{{ loginMessageType === 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
      {{ loginMessage }}
    </view>
  </view>
</view>